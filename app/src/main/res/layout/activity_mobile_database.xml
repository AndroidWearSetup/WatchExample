<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chooseDatabaseTextView"
        android:text="Now I wanna to learn:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"/>

    <Spinner
        android:id="@+id/chooseDatabaseSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </Spinner>

    <Button
        android:id="@+id/chooseDifficultyLevelButton"
        android:text="Choose difficulty level"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/loadDatabaseButton"
        android:text="Load database"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"/>

</LinearLayout>